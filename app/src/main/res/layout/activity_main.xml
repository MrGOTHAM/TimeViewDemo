<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical"
        tools:context=".clockView.ClockActivity">

    <com.example.timeviewdemo.clockView.TimeView
            android:layout_width="300dp"
            android:layout_height="300dp"
            android:id="@+id/time_view"/>

    <LinearLayout
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:orientation="horizontal">

        <EditText
                android:gravity="center_horizontal"
                android:id="@+id/hour_editText"
                android:layout_height="50dp"
                android:layout_width="0dp"
                android:layout_weight="1"/>

        <EditText
                android:layout_gravity="center_horizontal"
                android:id="@+id/min_editText"
                android:layout_height="50dp"
                android:layout_width="0dp"
                android:layout_weight="1"/>

        <EditText
                android:layout_gravity="center_horizontal"
                android:id="@+id/second_editText"
                android:layout_height="50dp"
                android:layout_width="0dp"
                android:layout_weight="1"/>

    </LinearLayout>

    <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="设置时间"
            android:id="@+id/edit_time_button"/>

    <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="获取时间"
            android:id="@+id/get_time_button"/>

</LinearLayout>